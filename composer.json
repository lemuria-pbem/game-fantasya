		"lemuria-pbem/renderer-magellan": "dev-feature/seaworld",
		"lemuria-pbem/renderer-text": "dev-feature/seaworld",
		"lemuria-pbem/statistics-fantasya": "dev-feature/seaworld",
		"lemuria-pbem/tools-lemuria": "dev-feature/seaworld"
