{
	"name": "lemuria-pbem/lemuria-alpha",
	"description": "A Lemuria game instance for developing purposes.",
	"type": "library",
	"keywords": [
		"eressea",
		"fantasya",
		"game",
		"lemuria",
		"pbem"
	],
	"version": "0.8.0",
	"time": "2021-10-24",
	"license": "GPL-3.0",
	"authors": [
		{
			"name": "Sascha Ternes",
			"email": "lemuria@online.de"
		}
	],

	"require": {
		"php": "~8.0",
		"ext-zip": "~1.2",
		"components/jquery": "~3.6",
		"twbs/bootstrap": "~4.6",

		"lemuria-pbem/lemuria": "dev-feature/monster",
		"lemuria-pbem/engine-fantasya": "dev-feature/monster",
		"lemuria-pbem/model-fantasya": "dev-feature/monster",
		"lemuria-pbem/renderer-magellan": "dev-feature/monster",
		"lemuria-pbem/renderer-text": "dev-feature/monster"
	},
	"require-dev": {
		"jetbrains/phpstorm-attributes": "~1.0"
	},
	"repositories": [
		{
			"type": "vcs",
			"url": "git@github.com:lemuria-pbem/lemuria.git"
		},
		{
			"type": "vcs",
			"url": "git@github.com:lemuria-pbem/engine-fantasya.git"
		},
		{
			"type": "vcs",
			"url": "git@github.com:lemuria-pbem/model-fantasya.git"
		},
		{
			"type": "vcs",
			"url": "git@github.com:lemuria-pbem/renderer-magellan.git"
		},
		{
			"type": "vcs",
			"url": "git@github.com:lemuria-pbem/renderer-text.git"
		}
	],

	"autoload": {
		"psr-4": {
			"Lemuria\\Alpha\\": "src/"
		}
	},

	"scripts": {
		"compile-report-css": "scripts/compile-report-scss.sh",
		"post-install-cmd": [
			"@compile-report-css"
		],
		"post-update-cmd": [
			"@compile-report-css"
		]
	},
	"scripts-descriptions": {
		"compile-report-css": "Compile Bootstrap and style.scss to report.min.css."
	}
}